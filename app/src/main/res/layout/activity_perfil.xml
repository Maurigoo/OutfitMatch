<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondohomeligthperfil"

    tools:context=".Perfil">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:contentDescription="@string/fotoPerfil"
        android:focusable="true"
        android:src="@drawable/fotoperfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/autour_one"
        android:text="Nombre"
        android:textColor="?attr/android:textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/autour_one"
        android:paddingTop="8dp"
        android:text="Email"
        android:textColor="?attr/android:textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintVertical_bias="0.04" />

    <ImageButton
        android:id="@+id/btnChangeMode"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/deco"
        android:src="@drawable/suniconwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/temabotn"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/autour_one"
        android:text="@string/Theme"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"

        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnChangeMode"
        app:layout_constraintTop_toBottomOf="@+id/lenguajeboton"
        app:layout_constraintVertical_bias="0.113" />

    <ImageButton
        android:id="@+id/btnChangeLang"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/deco"
        android:src="@drawable/flag_uk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/lenguajeboton"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/autour_one"
        android:text="@string/language"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnChangeLang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478" />

    <ImageButton
        android:id="@+id/logoutimgview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/deco"
        android:src="@drawable/logoutlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/autour_one"
        android:text="@string/cerrar_sesion"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logoutimgview"
        app:layout_constraintTop_toBottomOf="@+id/temabotn"
        app:layout_constraintVertical_bias="0.111" />

    <ImageButton
        android:id="@+id/deleteimgview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/deco"
        android:src="@drawable/deletelight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/autour_one"
        android:text="@string/delete_account"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/deleteimgview"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton"
        app:layout_constraintVertical_bias="0.222" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cornerRadius="10sp"
        app:backgroundColor="@color/nav_background"
        app:textColor="@color/nav_text"
        app:indicatorRadius="10sp"
        app:iconTint="@color/nav_icon_tint"
        app:iconTintActive="@color/nav_icon_active"
        app:indicatorColor="@color/nav_indicator"
        android:contentDescription="@string/deco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
