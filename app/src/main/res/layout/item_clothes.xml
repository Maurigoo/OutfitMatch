<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

<ImageView
android:id="@+id/imageViewClothes"
android:layout_width="100dp"
android:layout_height="100dp"
android:scaleType="centerCrop"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
tools:src="@drawable/shirt1" />

<TextView
android:id="@+id/textViewTalla"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Talla: M"
android:textSize="14sp"
android:layout_marginTop="8dp"
app:layout_constraintTop_toBottomOf="@id/imageViewClothes"
app:layout_constraintStart_toStartOf="parent" />

<TextView
android:id="@+id/textViewMateriales"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Material: AlgodÃ³n"
android:textSize="14sp"
android:layout_marginTop="4dp"
app:layout_constraintTop_toBottomOf="@id/textViewTalla"
app:layout_constraintStart_toStartOf="parent" />

<TextView
android:id="@+id/textViewColor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Color: Blanco"
android:textSize="14sp"
android:layout_marginTop="4dp"
app:layout_constraintTop_toBottomOf="@id/textViewMateriales"
app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>