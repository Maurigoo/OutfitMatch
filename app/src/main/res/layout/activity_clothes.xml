<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Clothes"
    tools:ignore="ExtraText">

    <!-- GIF en la parte superior -->

    <!-- Botón de Camisas -->
    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="145dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/gif_description"
        android:src="@drawable/hanger_animation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botonShirts"
        android:contentDescription="@string/boton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangleblue"
        android:src="@drawable/shirts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <!-- Botón de Todos -->
    <ImageButton
        android:id="@+id/botonAll"
        android:contentDescription="@string/boton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/rectangleblue"
        android:src="@drawable/all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <!-- Botón de Pantalones -->
    <ImageButton
        android:id="@+id/botonPants"
        android:contentDescription="@string/boton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangleblue"
        android:src="@drawable/pants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <!-- Botón de Vestidos -->
    <ImageButton
        android:id="@+id/botonDresses"
        android:contentDescription="@string/boton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/rectangleblue"
        android:src="@drawable/dresses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <!-- Botón de Zapatos -->
    <ImageButton
        android:id="@+id/botonShoes"
        android:contentDescription="@string/boton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangleblue"
        android:src="@drawable/shoes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <!-- Botón de Accesorios -->
    <ImageButton
        android:id="@+id/botonAccessories"
        android:contentDescription="@string/boton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/rectangleblue"
        android:src="@drawable/accessories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/boton_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_nav"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>