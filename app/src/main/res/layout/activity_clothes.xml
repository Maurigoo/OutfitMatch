<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoclothes"
    tools:context=".Clothes"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/totalPrendasText"
        android:layout_width="288dp"
        android:layout_height="58dp"
        android:fontFamily="@font/autour_one"
        android:text="0 prendas"
        android:textColor="?attr/android:textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/boton_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <ImageButton
        android:id="@+id/botonShirts"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rectangleblue"
        android:contentDescription="@string/boton"
        android:src="@drawable/shirts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <ImageButton
        android:id="@+id/botonAll"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/armario"
        android:contentDescription="@string/boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <ImageButton
        android:id="@+id/botonPants"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rectangleblue"
        android:contentDescription="@string/boton"
        android:src="@drawable/pants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />

    <ImageButton
        android:id="@+id/botonDresses"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/rectangleblue"
        android:contentDescription="@string/boton"
        android:src="@drawable/dresses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />

    <ImageButton
        android:id="@+id/botonShoes"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rectangleblue"
        android:contentDescription="@string/boton"
        android:src="@drawable/shoes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <ImageButton
        android:id="@+id/botonAccessories"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/rectangleblue"
        android:contentDescription="@string/boton"
        android:src="@drawable/accessories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/boton_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/orangedark"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>