<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#CCFFFFFF"/> <!-- Más opaco cuando presionado -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF"/> <!-- Fondo blanco translúcido normal -->
        </shape>
    </item>
</selector>
